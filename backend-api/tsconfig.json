{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",                         
    "paths": {                               
      "@/*": ["resources/js/*"]            
    },
    "types": ["vite/client"]                 
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.vue",
    "resources/js/**/*.d.ts"
  ]
}
